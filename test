            ]
          },
          { 
            title: "Plate Discipline", 
            tag: "IQ", 
            desc: "Pitch selection and zone control.", 
            metrics: [
              ["Walk Rate", "12%"], 
              ["Chase Rate", "22%"], 
              ["Zone Swing %", "68%"], 
              ["Pitch Recognition", "A-"]
            ]
          },
          { 
            title: "Contact Quality", 
            tag: "Contact", 
            desc: "Sweet spot and line drive rates.", 
            metrics: [
              ["Sweet Spot %", "41%"], 
              ["Line Drive %", "28%"], 
              ["Ground Ball %", "42%"], 
              ["Fly Ball %", "30%"]
            ]
          }
        ]
      }
    };


    // State
    let currentSport = 'soccer'; // Changed default to soccer for testing
    let currentReportType = 'shooting'; // Changed to shooting
    let currentReportIndex = 0;

    // Elements
    const sportTabs = document.querySelectorAll('.sport-tab');
    const reportTypeSelector = document.getElementById('reportTypeSelector');
    const reportTypeTabs = document.getElementById('reportTypeTabs');
    const reportCards = document.getElementById('reportCards');
    const sidebarSportName = document.getElementById('sidebarSportName');
    const previewKicker = document.getElementById('previewKicker');
    const previewTitle = document.getElementById('previewTitle');
    const previewDesc = document.getElementById('previewDesc');
    const metricsGrid = document.getElementById('metricsGrid');
    const playerInfoGrid = document.getElementById('playerInfoGrid');
    const playerInfoSection = document.getElementById('playerInfoSection');
    const modal = document.getElementById('modal');
    const modalTitle = document.getElementById('modalTitle');
    const modalSubtitle = document.getElementById('modalSubtitle');
    const modalContent = document.getElementById('modalContent');
    const modalAction = document.getElementById('modalAction');

    // Functions
    function getSportLabel(sport) {
      const labels = {
        icehockey: 'Ice Hockey',
        baseball: 'Baseball',
        basketball: 'Basketball',
        soccer: 'Soccer',
        fencing: 'Fencing',
        softball: 'Softball'
      };
      return labels[sport] || sport;
    }

    function renderReportTypes() {
      const reportTypes = REPORT_TYPES[currentSport] || [];
      
      if (reportTypes.length === 0) {
        reportTypeSelector.style.display = 'none';
        return;
      }
      
      reportTypeSelector.style.display = 'block';
      
      reportTypeTabs.innerHTML = reportTypes.map(type => `
        <div class="report-type-tab ${type.id === currentReportType ? 'active' : ''}" 
             onclick="selectReportType('${type.id}')">
          ${type.name}
        </div>
      `).join('');
    }

    function renderPlayerInfo() {
      const sportData = DATA[currentSport] || {};
      const reports = sportData[currentReportType] || [];
      const currentReport = reports[currentReportIndex];

      // KEY FIX: Only show player info section if explicitly marked
      // AND never include it in metrics content
      if (!currentReport?.showPlayerInfo) {
        playerInfoSection.classList.remove('show');
        return;
      }

      playerInfoSection.classList.add('show');

      // Handle baseball special cases
      if (currentSport === 'baseball') {
        const playerInfo = PLAYER_INFO.baseball[currentReportType];
        
        if (currentReportType === 'hitting') {
          playerInfoGrid.innerHTML = `
            <div class="player-info-item">
              <div class="player-info-label">Player Name</div>
              <div class="player-info-value">${playerInfo.name}</div>
            </div>
            <div class="player-info-item">
              <div class="player-info-label">Age</div>
              <div class="player-info-value">${playerInfo.age}</div>
            </div>
            <div class="player-info-item">
              <div class="player-info-label">Height</div>
              <div class="player-info-value">${playerInfo.height}</div>
            </div>
            <div class="player-info-item">
              <div class="player-info-label">Weight</div>
              <div class="player-info-value">${playerInfo.weight}</div>
            </div>
            <div class="player-info-item">
              <div class="player-info-label">Bats/Throws</div>
              <div class="player-info-value">${playerInfo.batsThrows}</div>
            </div>
            <div class="player-info-item">
              <div class="player-info-label">Developmental Level</div>
              <div class="player-info-value">${playerInfo.level}</div>
            </div>
          `;
        } else if (currentReportType === 'pitching') {
          playerInfoGrid.innerHTML = `
            <div class="player-info-item">
              <div class="player-info-label">Name</div>
              <div class="player-info-value">${playerInfo.name}</div>
            </div>
            <div class="player-info-item">
              <div class="player-info-label">Age</div>
              <div class="player-info-value">${playerInfo.age}</div>
            </div>
            <div class="player-info-item">
              <div class="player-info-label">Height (inches)</div>
              <div class="player-info-value">${playerInfo.height}</div>
            </div>
            <div class="player-info-item">
              <div class="player-info-label">Weight (lbs)</div>
              <div class="player-info-value">${playerInfo.weight}</div>
            </div>
            <div class="player-info-item">
              <div class="player-info-label">Throws/Bats</div>
              <div class="player-info-value">${playerInfo.throwsBats}</div>
            </div>
          `;
        }
        return;
      }

      // Handle other sports
      const playerInfo = PLAYER_INFO[currentSport];
      const jerseyColor = JERSEY_COLORS[playerInfo.jerseyColor] || '#666666';
      
      let infoItems = [
        { label: 'Name', value: playerInfo.name },
        { label: 'Jersey Number', value: playerInfo.jerseyNumber },
        { 
          label: 'Jersey Color', 
          value: `${playerInfo.jerseyColor}<span class="jersey-color-badge" style="background-color: ${jerseyColor}; ${playerInfo.jerseyColor === 'White' ? 'border-color: #d4d4d4;' : ''}"></span>` 
        },
        { label: 'Age', value: playerInfo.age },
        { label: 'Position', value: playerInfo.position },
        { label: 'Level', value: playerInfo.level }
      ];
      
      if (playerInfo.shot) {
        infoItems.splice(5, 0, { label: 'Shot', value: playerInfo.shot });
      } else if (playerInfo.bats) {
        infoItems.splice(5, 0, { label: 'Bats', value: playerInfo.bats });
      } else if (playerInfo.shoots) {
        infoItems.splice(5, 0, { label: 'Shoots', value: playerInfo.shoots });
      } else if (playerInfo.foot) {
        infoItems.splice(5, 0, { label: 'Foot', value: playerInfo.foot });
      } else if (playerInfo.hand) {
        infoItems.splice(5, 0, { label: 'Hand', value: playerInfo.hand });
      }

      playerInfoGrid.innerHTML = infoItems.map(item => `
        <div class="player-info-item">
          <div class="player-info-label">${item.label}</div>
          <div class="player-info-value">${item.value}</div>
        </div>
      `).join('');
    }

    function renderReportCards() {
      const sportData = DATA[currentSport] || {};
      const reports = sportData[currentReportType] || [];
      
      reportCards.innerHTML = reports.map((report, index) => `
        <div class="report-card ${index === currentReportIndex ? 'active' : ''}" onclick="selectReport(${index})">
          <div class="report-header">
            <div class="report-title">${report.title}</div>
            <div class="report-tag">${report.tag}</div>
          </div>
          <div class="report-desc">${report.desc}</div>
        </div>
      `).join('');
    }

    function renderPreview() {
      const sportData = DATA[currentSport] || {};
      const reports = sportData[currentReportType] || [];
      const report = reports[currentReportIndex];
      
      if (!report) return;

      sidebarSportName.textContent = getSportLabel(currentSport);
      previewKicker.textContent = getSportLabel(currentSport).toUpperCase();
      previewTitle.textContent = report.title;
      previewDesc.textContent = report.desc;

      // KEY FIX: Never include player info metrics in the metrics grid
      // The player info section is rendered separately above
      
      // Handle table display
      if (report.showTable && report.tableData) {
        metricsGrid.innerHTML = `
          <div style="grid-column: 1/-1; background: white; border: 2px solid var(--border); border-radius: 16px; padding: 32px; overflow-x: auto;">
            <table class="mechanics-table">
              <thead>
                <tr>
                  ${report.tableData.headers.map(header => `<th>${header}</th>`).join('')}
                </tr>
              </thead>
              <tbody>
                ${report.tableData.rows.map(row => `
                  <tr>
                    <td>${row[0]}</td>
                    <td>${row[1]}</td>
                    <td class="rating-cell">${row[2]}</td>
                    <td>${row[3]}</td>
                  </tr>
                `).join('')}
              </tbody>
            </table>
          </div>
        `;
      }
      // Handle content display
      else if (report.content || report.showSummary) {
        let htmlContent = '';
        
        if (report.content) {
          htmlContent = `
            <div style="white-space: pre-wrap; line-height: 1.8; color: var(--text-primary); font-size: 15px;">
              ${report.content}
            </div>
          `;
        }

        if (report.showSummary && report.summaryText) {
          htmlContent += `
            <div style="margin-top: 32px; border-top: 2px solid var(--border); padding-top: 24px;">
              <h3 style="font-size: 20px; font-weight: 800; margin-bottom: 16px; color: var(--text-primary);">Summary</h3>
              <div style="background: var(--surface); border: 2px solid var(--border); border-radius: 12px; padding: 20px; line-height: 1.8;">
                ${report.summaryText}
              </div>
            </div>
          `;
        }
        
        // KEY FIX: Only show metrics if report has them AND is not marked as showPlayerInfo
        // This prevents the duplicate display
        if (report.metrics && report.metrics.length > 0 && !report.showPlayerInfo) {
          htmlContent += `
            <div style="margin-top: 32px; border-top: 2px solid var(--border); padding-top: 24px;">
              <h3 style="font-size: 18px; font-weight: 800; margin-bottom: 20px; color: var(--text-primary);">Key Metrics</h3>
              <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(200px, 1fr)); gap: 16px;">
                ${report.metrics.map(([label, value]) => `
                  <div style="background: var(--surface); border: 2px solid var(--border); border-radius: 12px; padding: 16px;">
                    <div style="font-size: 12px; font-weight: 700; color: var(--text-secondary); margin-bottom: 8px; letter-spacing: 0.3px;">${label}</div>
                    <div style="font-size: 24px; font-weight: 900; color: var(--text-primary); letter-spacing: -0.5px;">${value}</div>
                  </div>
                `).join('')}
              </div>
            </div>
          `;
        }

        metricsGrid.innerHTML = `
          <div style="grid-column: 1/-1; background: white; border: 2px solid var(--border); border-radius: 16px; padding: 32px;">
            ${htmlContent}
          </div>
        `;
      }
      // Handle metric cards (only if not a player info report)
      else if (!report.showPlayerInfo) {
        metricsGrid.innerHTML = report.metrics.map(([label, value]) => `
          <div class="metric-card">
            <div class="metric-label">${label}</div>
            <div class="metric-value">${value}</div>
            <div class="metric-footer">Updated now â€¢ Live data</div>
          </div>
        `).join('');
      }

      renderPlayerInfo();
    }

    function selectSport(sport) {
      currentSport = sport;
      
      const reportTypes = REPORT_TYPES[sport] || [];
      currentReportType = reportTypes.length > 0 ? reportTypes[0].id : null;
      currentReportIndex = 0;

      sportTabs.forEach(tab => {
        tab.classList.toggle('active', tab.dataset.sport === sport);
      });

      renderReportTypes();
      renderReportCards();
      renderPreview();
    }

    function selectReportType(typeId) {
      currentReportType = typeId;
      currentReportIndex = 0;
      
      renderReportTypes();
      renderReportCards();
      renderPreview();
    }

    function selectReport(index) {
      currentReportIndex = index;
      renderReportCards();
      renderPreview();
    }

    function openModal() {
      const sportData = DATA[currentSport] || {};
      const reports = sportData[currentReportType] || [];
      const report = reports[currentReportIndex];
      
      if (!report) return;

      modalTitle.textContent = report.title;
      modalSubtitle.textContent = report.desc;

      modalContent.innerHTML = `
        <div class="modal-section">
          <h3>Report Metrics</h3>
          <ul class="modal-list">
            ${report.metrics.map(([label, value]) => `
              <li><strong>${label}:</strong> ${value}</li>
            `).join('')}
          </ul>
        </div>
        <div class="modal-section">
          <h3>Next Actions</h3>
          <ul class="modal-list">
            <li>Download detailed PDF report</li>
            <li>Share with coaching staff</li>
            <li>Schedule follow-up analysis</li>
            <li>Export data to external system</li>
          </ul>
        </div>
      `;

      modal.classList.add('open');
      document.body.style.overflow = 'hidden';
    }

    function closeModal() {
      modal.classList.remove('open');
      document.body.style.overflow = '';
    }

    // Event Listeners
    sportTabs.forEach(tab => {
      tab.addEventListener('click', () => selectSport(tab.dataset.sport));
    });
    
    modalAction.addEventListener('click', () => {
      alert('Action functionality will be implemented based on your requirements');
      closeModal();
    });

    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && modal.classList.contains('open')) {
        closeModal();
      }
    });

    // Initialize
    renderReportTypes();
    renderReportCards();
    renderPreview();
  </script>
</body>
</html>
